<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context="com.example.acaron0608.acassignment1.MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:text="Welcome!"
        tools:text="Welcome!" />

    <Button
        android:id="@+id/logOutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginTop="10dp"
        android:onClick="logOut"
        android:text="Log Out"
        tools:text="Log Out" />

    <Button
        android:id="@+id/btnEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="editProfile"
        android:text="Edit Profile"
        tools:text="Edit Profile"
        android:layout_above="@+id/btnNews"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="43dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Motto:"
        android:textSize="20sp"
        tools:text="Motto:"
        android:layout_above="@+id/textView7"
        android:layout_toLeftOf="@+id/txtTag"
        android:layout_toStartOf="@+id/txtTag"
        android:layout_marginBottom="22dp" />

    <TextView
        android:id="@+id/txtMotto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_toRightOf="@id/textView2"
        android:layout_alignTop="@id/textView2"
        android:layout_marginLeft="15dp"
        tools:text="Motto"/>

    <TextView
        android:id="@+id/txtName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        tools:text="User"
        android:layout_alignBaseline="@+id/lblNickName"
        android:layout_alignBottom="@+id/lblNickName"
        android:layout_toRightOf="@+id/textView9"
        android:layout_toEndOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favourite Genre:"
        android:textSize="20sp"
        tools:text="Favourite Genre:"
        android:layout_above="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp" />

    <TextView
        android:id="@+id/txtGenre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_toRightOf="@id/textView7"
        android:layout_alignTop="@id/textView7"
        android:layout_marginLeft="15dp"
        tools:text="Genre"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Platform(s):"
        android:textSize="20sp"
        tools:text="Platforms(s):"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txtPlatform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_toRightOf="@id/textView9"
        android:layout_alignTop="@id/textView9"
        android:layout_marginLeft="15dp"
        tools:text="Platform"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tag(s):"
        android:textSize="20sp"
        tools:text="Tag(s):"
        android:layout_above="@+id/btnEdit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="63dp" />

    <TextView
        android:id="@+id/txtTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_toRightOf="@id/textView10"
        android:layout_alignTop="@id/textView10"
        android:layout_marginLeft="15dp"
        tools:text="Tag"/>

    <Button
        android:id="@+id/btnNews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="newsPage"
        android:text="News" />

    <Button
        android:id="@+id/btnGroups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnNews"
        android:layout_toEndOf="@+id/txtPlatform"
        android:layout_toRightOf="@+id/txtPlatform"
        android:text="Groups" />

    <TextView
        android:id="@+id/lblNickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtMotto"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginBottom="35dp"
        android:text="NickName: "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/logOutButton"
        android:layout_toEndOf="@+id/btnEdit"
        android:layout_toRightOf="@+id/btnEdit"
        android:textSize="20sp"
        android:text="" />
</RelativeLayout>
